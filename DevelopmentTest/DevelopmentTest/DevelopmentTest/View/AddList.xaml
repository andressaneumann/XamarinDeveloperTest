<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DevelopmentTest.View.AddList">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="ToDoTitle" Placeholder="Title"  />
               <Picker x:Name="pickerColor" HorizontalOptions="FillAndExpand" Title="Select a color:">
                    <Picker.Items>
                        <x:String>Blue</x:String>
                        <x:String>Green</x:String>
                        <x:String>Pink</x:String>
                    </Picker.Items>
                </Picker>
                <DatePicker x:Name="datePicker" HorizontalOptions="Center"
                            MinimumDate="01/01/2018"
                            MaximumDate="12/31/2019"
                            Date="02/26/2018" 
                            />
            <Button Text="Submit" Clicked="Handle_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
